<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        style="@style/myInputView"
        android:layout_marginLeft="0dp">

        <TextView style="@style/myInputView.upside" />

        <TextView
            android:id="@+id/et_car_license_inputbox1"
            style="@style/myInputView.underpart"
            android:layout_gravity="center_vertical"
            android:background="@drawable/car_province_bg_selector"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout style="@style/myInputView">

        <TextView style="@style/myInputView.upside" />

        <TextView
            android:id="@+id/et_car_license_inputbox2"
            style="@style/myInputView.underpart"
            android:background="@drawable/car_bg_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView style="@style/myInputView.upside" />

        <LinearLayout
            style="@style/myInputView.underpart"
            android:background="@android:color/transparent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/myInputView">

        <TextView style="@style/myInputView.upside" />

        <TextView
            android:id="@+id/et_car_license_inputbox3"
            style="@style/myInputView.underpart"
            android:background="@drawable/car_bg_selector" />
    </LinearLayout>

    <LinearLayout
        style="@style/myInputView"
        android:orientation="vertical">

        <TextView style="@style/myInputView.upside" />

        <TextView
            android:id="@+id/et_car_license_inputbox4"
            style="@style/myInputView.underpart"
            android:background="@drawable/car_bg_selector" />
    </LinearLayout>

    <LinearLayout
        style="@style/myInputView"
        android:orientation="vertical">

        <TextView style="@style/myInputView.upside" />

        <TextView
            android:id="@+id/et_car_license_inputbox5"
            style="@style/myInputView.underpart"
            android:background="@drawable/car_bg_selector" />
    </LinearLayout>

    <LinearLayout
        style="@style/myInputView"
        android:orientation="vertical">

        <TextView style="@style/myInputView.upside" />

        <TextView
            android:id="@+id/et_car_license_inputbox6"
            style="@style/myInputView.underpart"
            android:background="@drawable/car_bg_selector" />
    </LinearLayout>

    <LinearLayout
        style="@style/myInputView"
        android:orientation="vertical">

        <TextView style="@style/myInputView.upside" />

        <TextView
            android:id="@+id/et_car_license_inputbox7"
            style="@style/myInputView.underpart"
            android:background="@drawable/car_bg_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEnergy"
        style="@style/myInputView"
        android:layout_marginRight="0dp">

        <TextView
            style="@style/myInputView.upside"
            android:text="新能源"
            android:textColor="@color/color_energy" />

        <TextView
            android:id="@+id/et_car_license_inputbox8"
            style="@style/myInputView.underpart"
            android:background="@drawable/car_energy_bg_selector" />
    </LinearLayout>
</LinearLayout>