<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/rlContainer"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="普通样式(基础样式)" />

        <cn.qingsong.car.keyboardlibrary.view.InputView
            android:id="@+id/inputView"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:background="@android:color/darker_gray"
            app:pwkInputTextSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="新能源样式(公司样式)" />

        <cn.qingsong.car.keyboardlibrary.view.InputView
            android:id="@+id/inputView1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:pwkEnergyLabelVisible="visible"
            app:pwkEnergySelectedDrawable="@drawable/car_energy_bg_selected"
            app:pwkEnergyUnSelectedDrawable="@drawable/car_energy_bg_normal"
            app:pwkInputTextSize="16sp"
            app:pwkItemPadding="2dp"
            app:pwkItemSelectedDrawable="@drawable/car_bg_selected"
            app:pwkItemUnSelectedDrawable="@drawable/car_bg_normal"
            app:pwkProvinceSelectedDrawable="@drawable/car_province_bg_selected"
            app:pwkProvinceUnSelectedDrawable="@drawable/bg_province" />


    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@id/rlContainer"
        android:layout_alignRight="@id/rlContainer"
        android:src="@mipmap/ic_close" />


</RelativeLayout>