<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="普通样式(基础样式)" />

    <cn.qingsong.car.keyboardlibrary.view.InputView
        android:id="@+id/inputView"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:background="@android:color/darker_gray"
        app:pwkInputTextSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="新能源样式(公司样式)" />

    <cn.qingsong.car.keyboardlibrary.view.InputView
        android:id="@+id/inputView1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:pwkEnergyLabelVisible="visible"
        app:pwkEnergySelectedDrawable="@drawable/car_energy_bg_selected"
        app:pwkEnergyUnSelectedDrawable="@drawable/car_energy_bg_normal"
        app:pwkInputTextSize="16sp"
        app:pwkItemPadding="2dp"
        app:pwkItemSelectedDrawable="@drawable/car_bg_selected"
        app:pwkItemUnSelectedDrawable="@drawable/car_bg_normal"
        app:pwkProvinceSelectedDrawable="@drawable/car_province_bg_selected"
        app:pwkProvinceUnSelectedDrawable="@drawable/bg_province" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="新能源样式(公司样式无新能源提示头)" />

    <cn.qingsong.car.keyboardlibrary.view.InputView
        android:id="@+id/inputView2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:pwkEnergyLabelVisible="gone"
        app:pwkEnergySelectedDrawable="@drawable/car_energy_bg_selected"
        app:pwkEnergyUnSelectedDrawable="@drawable/car_energy_bg_normal"
        app:pwkInputTextSize="16sp"
        app:pwkItemPadding="1dp"
        app:pwkItemSelectedDrawable="@drawable/car_bg_selected"
        app:pwkItemUnSelectedDrawable="@drawable/car_bg_normal"
        app:pwkProvinceSelectedDrawable="@drawable/car_province_bg_selected"
        app:pwkProvinceUnSelectedDrawable="@drawable/bg_province" />

    <Button
        android:id="@+id/showDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#3D90FF"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="dialog中的车牌输入框"
        android:textColor="@color/white" />
</LinearLayout>